@page
@using SaludIntegral.App.Dominio
@model SaludIntegral.App.Frontend.Pages.Administrator.createLocationModel
@{
}
<h1>Añadir locacion</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="location.Name_Location"></label>
        <input asp-for="location.Name_Location" class="form-control">
        <span asp-validation-for="location.Name_Location" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="location.Address"></label>
        <input asp-for="location.Address" class="form-control">
        <span asp-validation-for="location.Address" class="text-danger"></span>
    </div>
    <div class="form-group">        
        <label asp-for="location.City"></label>
        <input asp-for="location.City" class="form-control">
    </div>
       
    <button type="submit" class="btn btn-primary">Crear locacion</button>
</form>
<a class="btn btn-secondary" asp-page="/Index">Volver</a>