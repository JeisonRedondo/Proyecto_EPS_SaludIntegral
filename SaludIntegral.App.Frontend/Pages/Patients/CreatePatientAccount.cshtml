@page
@using SaludIntegral.App.Dominio
@model SaludIntegral.App.Frontend.Pages.CreatePatientAccountModel
@{
}
<h1>Nuevo Paciente</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="Paciente.Names"></label>
        <input asp-for="Paciente.Names" class="form-control">
        <span asp-validation-for="Paciente.Names" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Paciente.Identification"></label>
        <input asp-for="Paciente.Identification" class="form-control">
        <span asp-validation-for="Paciente.Identification" class="text-danger"></span>
    </div>
    <div class="form-group">        
        <label asp-for="Paciente.Gender"></label>
        <input asp-for="Paciente.Gender" class="form-control">
    </div>
    <div class="form-group">        
        <label asp-for="Paciente.Phone_number"></label>
        <input asp-for="Paciente.Phone_number" class="form-control">
    </div>
     <div class="form-group">        
        <label asp-for="Paciente.Email"></label>
        <input asp-for="Paciente.Email" class="form-control">
    </div>
    <div class="form-group">        
        <label asp-for="Paciente.DateOfBirth"></label>
        <input asp-for="Paciente.DateOfBirth" class="form-control">
    </div>    
    <div class="form-group">        
        <label asp-for="Paciente.EPS"></label>
        <input asp-for="Paciente.EPS" class="form-control">
    </div>
   
    <button type="submit" class="btn btn-primary">Crear Paciente</button>
</form>
<a class="btn btn-secondary" asp-page="/Index">Volver</a>