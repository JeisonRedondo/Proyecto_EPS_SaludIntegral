<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Salud Integral</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white menu-flex">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">
                    <img src="/Resources/logotipo-salud-integral.png" width="150px" height="150px" alt="Salud Integral Logo" title="Salud Integral">
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="float-right" id="menu-items" style="display: flex; align-items: center;">
                    <ul class="navbar-nav flex-grow-1 hidden-xs hidden-sm hidden-md">
                        <li class="nav-item" style="padding-left: 15px;">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item" style="padding-left: 15px;">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Help">Help</a>
                        </li>
                        <li class="nav-item" style="padding-left: 15px;">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                        <li class="nav-item" style="padding-left: 15px;">
                            <a asp-page="/Login" title="Login or Signup">
                                <button class="btn btn-primary">
                                    Login/Sign Up
                                </button>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="p-3" style="margin: 145px 0;">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted text-center mt-4" style="padding: 18px 0;">
        <div class="container">
            &copy; 2021 - Appointment management and scheduling system | Salud Integral - <a asp-area="" asp-page="/Privacy">Privacy</a><span>    |   </span><a asp-area="" asp-page="/Help">Help</a><span>    |   </span><a asp-area="" asp-page="/Index">Sign Up</a><span>    |   </span><a asp-area="" asp-page="/Index">Login</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
