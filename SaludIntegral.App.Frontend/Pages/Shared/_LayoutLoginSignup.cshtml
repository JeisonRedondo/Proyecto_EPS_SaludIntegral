<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Salud Integral</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header class="d-flex justify-content-center pt-4">
       <a asp-page="/Index">
            <button type="button" class="btn btn-primary">Go back home</button>
       </a>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted text-center mt-4" style="padding: 18px 0;">
        <div class="container">
            &copy; 2021 - Appointment management and scheduling system | Salud Integral - <a asp-area="" asp-page="/Privacy">Privacy</a><span>    |   </span><a asp-area="" asp-page="/Help">Help</a><span>    |   </span><a asp-area="" asp-page="/Index">Sign Up</a><span>    |   </span><a asp-area="" asp-page="/Index">Login</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
